{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "G++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\main.cpp",
				"-o",
				"${workspaceFolder}\\bin\\sheepulator.exe",
				"./src/*.cpp",
				"./src/entities/chunk/*.cpp",
				"./src/entities/*.cpp",
				"./src/math/*.cpp",
				"./src/input/*.cpp",
				"-I./include",
				"-L./lib",
				"-lSDL2",
				"-lSDL2main",
				"-lSDL2_test",
				"-lSDL2.dll",
				"-std=c++17"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: D:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}