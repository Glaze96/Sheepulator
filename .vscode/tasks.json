{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "D:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"src/*.cpp",
				"-o",
				"${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
				"-I./include",
				"-L./lib",
				"-lSDL2",
				"-lSDL2main",
				"-lSDL2_test",
				"-lSDL2.dll"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: D:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}